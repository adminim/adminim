
init();

function init() {
    // check menu
    var check_menu = "<%== $menu %>";
    $("#menu_btn_" + check_menu).attr('checked', 'checked');

    // create buttons
    $( "#menu_buttons" ).buttonset();

    // move menu
    move_menu_button();
    $(window).resize(move_menu_button);

    // init layout
    var l = $('body').layout({ applyDefaultStyles: true });
    l.sizePane("north", 40);
    l.sizePane("west", 300);
}
 
